@model Mvc.Facade.EntityView
@{
	var title = Mvc.Core.TypeHelper.DisplayName(Model, "Index");
    Layout = "_Layout";
}

<div class="format-box">
	<h1>Details</h1>

	<div>
	    <h4>@title</h4>
	    <hr />

	    <dl class="row">
		    @RenderBody()
	    </dl>

	</div>
	<div>
		<a asp-action="Edit" class="btn btn-hover" asp-route-id="@Model?.Id">Edit</a> |
		<a asp-action="Index" class="btn btn-hover">Back to List</a>
	</div>
</div>