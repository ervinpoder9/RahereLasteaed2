@using Mvc.Core.Editors
@using Mvc.Core
@using Mvc.Domain
@using Mvc.Soft.Data
@model Mvc.Facade.AllStaffView

@{
    var categories = await Services.Get<IAllCategoriesRepo>()?.GetAsync()! ?? [];
    SelectList categoryList = new SelectList(categories, "Id", "CategoryName", Model.AllCategoriesId);
}

@Html.SelectFor(x => x.AllCategoriesId, categoryList)


@Html.InputFor(x => x.Name)
@Html.InputFor(x => x.Surname)
@Html.InputFor(x => x.IDNumber)
@Html.InputFor(x => x.Address)
@Html.InputFor(x => x.Mobile)
@Html.InputFor(x => x.Email)
@Html.InputFor(x => x.Position)
@Html.InputForEnum(x => x.Education)
@Html.InputFor(x => x.AdditionalInfo)
